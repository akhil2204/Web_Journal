<%- include("partials/header") %>

<div class="ui main text container segment">
<div class="ui huge header">Edit <%=edit.title%></div>
<form class="ui form" action ="/blog/<%= edit._id %>?_method=PUT" method = "POST">
<div class="field">
<label>Title</label>
<input type="text" name="blog[title]" value="<%=edit.title%>">
</div>
<div class="field">
<label>Image</label>
<input type ="text" name="blog[image]" value="<%=edit.image%>">
</div>
<div class="field">
<label>Blog Content</label>
<textarea name="blog[body]"><%=edit.body%></textarea>
</div>
<input  class="ui inverted green button" type ="submit">
</form>
</div>

